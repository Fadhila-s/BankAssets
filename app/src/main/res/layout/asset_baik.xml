<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <!-- ===== Toolbar ===== -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:elevation="30dp"
        android:background="?attr/colorPrimary"
        android:title="Asset Baik"
        android:titleTextColor="@color/text"
        app:navigationIcon="@drawable/ic_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== Card Cabang ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCabang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:background="@color/bg_card"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/tvCabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaCabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Cabang"
                android:textColor="@color/text"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/alamatCabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Cabang"
                android:textSize="12sp"
                android:textColor="@color/text_grey"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAssetBaik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/cardCabang">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAssetBaik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aset Perlu Pemeliharaan"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/jumlahAssetBaik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== Scroll Area (Form) ===== -->
    <ScrollView
        android:id="@+id/scrollForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/cardAssetBaik"
        app:layout_constraintBottom_toTopOf="@+id/scrollChip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- List Asset -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAsset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/windowBackground"/>
    </ScrollView>

    <!-- Filter Chip (Horizontal Scroll) -->
    <HorizontalScrollView
        android:id="@+id/scrollChip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:padding="8dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:singleLine="true"
            app:chipSpacingHorizontal="8dp">
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSemua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Semua"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop"
                android:layout_marginRight="15dp"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC"
                android:layout_marginRight="15dp"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etPrinter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Printer"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etTelepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Telepon"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etMeja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Meja"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etKursi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Kursi"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etLemari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Lemari"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/etLainnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Lainnya"
                android:checkable="true"
                android:clickable="true" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
