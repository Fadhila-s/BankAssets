<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="30dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_logo_biru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BankAssets"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/icLogo"
            app:layout_constraintTop_toTopOf="@id/icLogo"
            app:layout_constraintBottom_toBottomOf="@id/icLogo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Cabang Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navCabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_card"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/cardTotalAsset">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/tvCabang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/namaCabang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Kantor"
                    android:textColor="@color/text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/alamatCabang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Kantor"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/icDropdownCabang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_dropdown"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Asset -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotalAsset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/navCabang">

        <LinearLayout
            android:id="@+id/tvTotalAsset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtTotalAsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Aset"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/jumlahTotalAsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Statistik -->
    <LinearLayout
        android:id="@+id/navStatistik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardTotalAsset">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAssetRusak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAssetRusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aset Perlu Pemeliharaan"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/jumlahAssetRusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAssetBaik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAssetBaik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aset Baik"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/jumlahAssetBaik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/navStatistik">
        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asset Ruangan"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/text"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/icDeleteDivisi"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:contentDescription="Icon delete divisi"/>
    </LinearLayout>

    <!-- Content Scroll -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:orientation="vertical">

            <!-- RecyclerView Divisi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDivisi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/windowBackground"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Tambah cabang dan divisi"
        android:src="@drawable/ic_add"

        app:backgroundTint="?attr/colorPrimary"
        app:tint="@color/text"

        app:elevation="0dp"
        app:pressedTranslationZ="0dp"

        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
